# -------------------------------------------------
# Environment Variables for E-commerce Server
# -------------------------------------------------

# Port for the Express server to run on
PORT=5000

# MongoDB Connection URI
# Replace this with your actual connection string from MongoDB Atlas
DB_URI="mongodb://localhost:27017/EcommerceGeminiDB"

# JSON Web Token (JWT) Secret Key
# This is used to sign and verify authentication tokens.
# You can generate a strong, random string for this.
JWT_SECRET="a_very_strong_and_long_random_secret_string_for_jwt"

